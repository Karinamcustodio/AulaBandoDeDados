@model AgendaMVC.Models.Compromisso
@{
    ViewData["Title"] = "Cadastrar novo compromisso";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <select asp-for="Contato.Id" asp-items="@ViewBag.contatos" class="form-control"></select>
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <select asp-for="Local.Id" asp-items="@ViewBag.locais" class="form-control"></select>
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar a lista</a>
</div>